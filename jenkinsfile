pipeline {
    agent any
    environment {
        DOCKERHUB_REPO = 'joaumgabrielss/nginx-web-site'
    }
    
    stages {
        stage('Checkout') {
            steps { checkout scm }
        }
        stage('Build Docker') {
            steps { sh 'docker build -t $DOCKERHUB_REPO .' }
        }
        stage('Login Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PASS')]) {
                    sh 'echo $DOCKERHUB_PASS | docker login -u $DOCKERHUB_USER --password-stdin'
                }
            }
        }
        stage('Test Docker Image') {
            steps {
                sh '''
                    docker run --rm -d --name test-nginx $DOCKERHUB_REPO
                    sleep 5
                    CONTAINER_IP=$(docker inspect -f '{{range .NetworkSettings.Networks}}{{.IPAddress}}{{end}}' test-nginx)
                    curl -f http://$CONTAINER_IP || (docker logs test-nginx && docker stop test-nginx && exit 1)
                    docker stop test-nginx
                '''
            }
        }
        stage('Push Docker Image') {
            steps {
                sh 'docker push $DOCKERHUB_REPO'
            }
        }
    }
    post {
        success {
            echo 'Pipeline executado com sucesso!'
        }
        failure {
            echo 'Pipeline falhou!'
        }
    }
}