pipeline {
    agent any
    environment {
        DOCKERHUB_REPO = 'joaumgabrielss/nginx-web-site'
    }
    
    stages {
        stage('Checkout') {
            steps { checkout scm }
        }
        stage('Build Docker') {
            steps { sh 'docker build -t $DOCKERHUB_REPO .' }
        }
        stage('Push Docker Image') {
            steps {
                sh 'docker push $DOCKERHUB_REPO'
            }
        }
    }
}